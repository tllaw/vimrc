" Maintainer: Tin-Lok Law (@tllaw)

" be iMproved
set nocompatible

" syntax
syntax on

" line number
set number
set relativenumber

" indentation
set tabstop=2
set shiftwidth=2
set expandtab
set autoindent
set smartindent
set smarttab
set shiftround

" search
set incsearch
set hlsearch
set ignorecase
set smartcase

" display
set ruler

" scroll
set scrolloff=10

" command line autocomplete
set path+=**
set wildmenu

" split
set splitbelow
set splitright
